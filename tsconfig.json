{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2023"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "moduleTypes": {
      "webpack.config.ts": "cjs"
    },
    "experimentalSpecifierResolution": "node"
  },
  "types": ["node"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".eslintrc.js", "test", "dist"]
}
